= bootstrap_form_for @entry do |f|
  = f.collection_select :part_of_speech_id, PartOfSpeech.all, :id, :name
  = f.collection_select :language_id, Language.all, :id, :name
  = f.text_field :part_a
  = f.text_field :part_b
  = f.text_field :part_c
  = f.text_field :part_d
  = f.text_field :part_e
  = f.text_field :part_f
  = f.select :primary_part, ['A','B','C','D','E','F']
  = f.text_field :first_form
  = f.text_field :second_form
  = f.text_field :third_form
  = f.text_area :comments
  = f.submit 'Save'

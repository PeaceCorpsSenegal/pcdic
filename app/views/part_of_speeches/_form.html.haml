= form_for @part_of_speech do |f|
  -if @part_of_speech.errors.any?
    #error_explanation
      %h2= "#{pluralize(@part_of_speech.errors.count, "error")} prohibited this part_of_speech from being saved:"
      %ul
        - @part_of_speech.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'

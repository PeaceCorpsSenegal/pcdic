= form_for @usage do |f|
  -if @usage.errors.any?
    #error_explanation
      %h2= "#{pluralize(@usage.errors.count, "error")} prohibited this usage from being saved:"
      %ul
        - @usage.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :word_id
    = f.number_field :word_id
  .field
    = f.label :example
    = f.text_field :example
  .field
    = f.label :priority
    = f.number_field :priority
  .actions
    = f.submit 'Save'
